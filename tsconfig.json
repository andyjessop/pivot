{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@pivot/client-cache": ["packages/client-cache/src/index.ts"],
      "@pivot/client-router": ["packages/client-router/src/index.ts"],
      "@pivot/dynamic-slice": ["packages/dynamic-slice/src/index.ts"],
      "@pivot/dynamic-store": ["packages/dynamic-store/src/index.ts"],
      "@pivot/pivot-injectable": ["packages/pivot-injectable/src/index.ts"],
      "@pivot/pivot-resolver": ["packages/pivot-resolver/src/index.ts"],
      "@pivot/redux-registry": ["packages/redux-registry/src/index.ts"],
      "@pivot/redux-types": ["packages/redux-types/src/index.ts"],
      "@pivot/slice": ["packages/slice/src/index.ts"],
      "@pivot/template": ["packages/template/src/index.ts"],
      "@pivot/util-promise": ["packages/util-promise/src/index.ts"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
