    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "es2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "~app": ["apps/client/src/app/index.ts"],
      "~app/*": ["apps/client/src/app/*"],
      "~assets/*": ["apps/client/src/assets/*"],
      "~modules/*": ["apps/client/src/modules/*"],
      "@pivot/client/auth": ["packages/client/auth/src/index.ts"],
      "@pivot/client/breadcrumb": ["packages/client/breadcrumb/src/index.ts"],
      "@pivot/client/cache": ["packages/client/cache/src/index.ts"],
      "@pivot/client/components": ["packages/client/components/src/index.ts"],
      "@pivot/client/deployments": ["packages/client/deployments/src/index.ts"],
      "@pivot/client/env": ["packages/client/env/src/index.ts"],
      "@pivot/client/environments": [
        "packages/client/environments/src/index.ts"
      ],
      "@pivot/client/feature-flags": [
        "packages/client/feature-flags/src/index.ts"
      ],
      "@pivot/client/features": ["packages/client/features/src/index.ts"],
      "@pivot/client/head": ["packages/client/head/src/index.ts"],
      "@pivot/client/http": ["packages/client/http/src/index.ts"],
      "@pivot/client/nav": ["packages/client/nav/src/index.ts"],
      "@pivot/client/project": ["packages/client/project/src/index.ts"],
      "@pivot/client/pending-deployment": [
        "packages/client/pending-deployment/src/index.ts"
      ],
      "@pivot/client/releases": ["packages/client/releases/src/index.ts"],
      "@pivot/client/router": ["packages/client/router/src/index.ts"],
      "@pivot/client/shared-interfaces": [
        "packages/client/shared-interfaces/src/index.ts"
      ],
      "@pivot/client/variables": ["packages/client/variables/src/index.ts"],
      "@pivot/design/lit": ["packages/design/lit/src/index.ts"],
      "@pivot/design/global": ["packages/design/global/src/index.ts"],
      "@pivot/design/css": ["packages/design/css/src/index.ts"],
      "@pivot/design/custom-elements": [
        "packages/design/custom-elements/src/index.ts"
      ],
      "@pivot/design/react/loader": [
        "packages/design/react/loader/src/index.ts"
      ],
      "@pivot/design/variables": ["packages/design/variables/src/index.ts"],
      "@pivot/fixtures": ["packages/fixtures/src/index.ts"],
      "@pivot/lib/async-queue": ["packages/lib/async-queue/src/index.ts"],
      "@pivot/lib/create-store": ["packages/lib/create-store/src/index.ts"],
      "@pivot/lib/dynamic-slice-registry": [
        "packages/lib/dynamic-slice-registry/src/index.ts"
      ],
      "@pivot/lib/subscription-manager": [
        "packages/lib/subscription-manager/src/index.ts"
      ],
      "@pivot/lib/dynamic-store": ["packages/lib/dynamic-store/src/index.ts"],
      "@pivot/lib/headless": ["packages/lib/headless/src/index.ts"],
      "@pivot/lib/injectable": ["packages/lib/injectable/src/index.ts"],
      "@pivot/lib/lifecycle": ["packages/lib/lifecycle/src/index.ts"],
      "@pivot/lib/redux-registry": ["packages/lib/redux-registry/src/index.ts"],
      "@pivot/lib/redux-types": ["packages/lib/redux-types/src/index.ts"],
      "@pivot/lib/resource": ["packages/lib/resource/src/index.ts"],
      "@pivot/lib/slice": ["packages/lib/slice/src/index.ts"],
      "@pivot/lib/use-selector": ["packages/lib/use-selector/src/index.ts"],
      "@pivot/lib/use-service": ["packages/lib/use-service/src/index.ts"],
      "@pivot/template": ["packages/template/src/index.ts"],
      "@pivot/util/classname": ["packages/util/classname/src/index.ts"],
      "@pivot/util/function": ["packages/util/function/src/index.ts"],
      "@pivot/util/object": ["packages/util/object/src/index.ts"],
      "@pivot/util/promise": ["packages/util/promise/src/index.ts"],
      "@pivot/util/string": ["packages/util/string/src/index.ts"],
      "@pivot/util/time": ["packages/util/time/src/index.ts"],
      "@pivot/util/url": ["packages/util/url/src/index.ts"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.src.json" },
    { "path": "./tsconfig.test.json" }
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
